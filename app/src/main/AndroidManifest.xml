<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.charlie.chorestarapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".createacc"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateChildAcc"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ParentHomepage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddChildProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddChore"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChildSplash"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChildHomepage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2" />
        <activity android:name=".ChoreDetails" />
        <activity android:name=".Help"></activity>
    </application>

</manifest>