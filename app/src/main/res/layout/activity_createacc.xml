<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createacc"
    android:orientation="vertical"
    android:background="@drawable/letsgetstarted">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Let's Get Started"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:fontFamily="@font/nunito_extralight" />


    <EditText
        android:id="@+id/Register_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:gravity="center"
        android:hint="Enter Your Email address"
        android:padding="20dp"
        android:inputType="textEmailAddress"
        app:fontFamily="@font/nunito_extralight" />

    <EditText
        android:id="@+id/Register_Nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:gravity="center"
        android:hint="What name do they call you?"
        android:padding="20dp"
        app:fontFamily="@font/nunito_extralight"
        android:layout_alignParentLeft="true" />

    <!--<EditText-->
    <!--android:id="@+id/Register_Uname"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentStart="true"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_marginTop="10dp"-->
    <!--android:background="@android:drawable/dialog_holo_light_frame"-->
    <!--android:gravity="center"-->
    <!--android:hint="Enter Your Username"-->
    <!--android:padding="20dp"-->
    <!--app:fontFamily="@font/nunito_extralight"-->
    <!--android:layout_alignParentLeft="true" />-->

    <EditText
        android:id="@+id/Register_Pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:gravity="center"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:padding="20dp"
        app:fontFamily="@font/nunito_extralight"
        android:layout_alignParentLeft="true" />
    <EditText
        android:id="@+id/Register_Pass_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:gravity="center"
        android:hint="Confirm Your Password"
        android:inputType="textPassword"
        android:padding="20dp"
        app:fontFamily="@font/nunito_extralight"
        android:layout_alignParentLeft="true" />


    <Button
        android:id="@+id/createacc_button_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:background="@color/button"
        android:gravity="center"
        android:padding="10dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        app:fontFamily="@font/nunito_extralight" />

    <Button
        android:id="@+id/createacc_button_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/button"
        android:gravity="center"
        android:padding="10dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:fontFamily="@font/nunito_extralight" />

    <ProgressBar
        android:id="@+id/progress_createacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>


</LinearLayout>